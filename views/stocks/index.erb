<h1>My Stock</h1>

<% for stock in @stocks %>

<div class="card">
  <p>Name: <%= stock.name %></p>

  <p>Category: <%=stock.category %></p>

  <p>Designer: <%= stock.designer %></p>

  <p>Price <%= stock.price %></p>

  <p>Size: <%= stock.size %></p>

  <p><a href="/stocks/<%= stock.id %>">Show Stock</a></p>

  <form
    action="/stocks/<%= stock.id %>/delete"
    method="DELETE">
    <input
      class="button"
      type="submit"
      value="remove"/>
  </form>
</div>

<% end %>
